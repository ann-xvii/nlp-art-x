<div class="posts-index">

<!-- page-header adds faint underline and padding, bootstrap class -->
<div class="page-header">
  <h1>Thoughts. Galleries.</h1>  
</div>
<span class="button-center">
<%= link_to "Post something cool...", new_post_path, class: "btn btn-default", id: "button-classic" %>
</span>

<% @posts.each do |post| %>
  <div class="post">
    <strong><%= post.name %></strong>
    <p><%= post.content %></p>
    <div class="meta">

      <% if post.date_published %> <!-- only display times for items with timestamp -->
        <%= link_to time_ago_in_words(post.date_published) + " ago", post %>
      <% else %>
        <%= link_to "Show", post %>
      <% end %>

      <span class="admin">
        | <%= link_to "Edit", edit_post_path(post) %> |
        <%= link_to "Delete", post, method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
      </span> <!-- end of admin class -->

    </div> <!-- end of meta class -->
  </div> <!-- end of post container -->
<% end %>


</div>



